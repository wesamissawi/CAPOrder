{
  "name": "my-electron-app",
  "version": "1.1.1",
  "description": "OrderMgmtSystem",
  "keywords": [
    "CAP",
    "Consumer",
    "OrderManager"
  ],
  "license": "SEE LICENSE IN LICENCE.txt",
  "author": "Wesam Issawi",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "cd renderer && npm run build",
    "build": "npm run build:renderer",
    "start": "electron .",
    "dist": "electron-builder -w",
    "dist:publish": "electron-builder -w --publish always"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^9.2.1",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "playwright": "^1.57.0"
  },
  "build": {
    "appId": "com.caporder.app",
    "productName": "CAPOrder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "wesamissawi",
        "repo": "CAPOrder"
      }
    ]
  }
}
